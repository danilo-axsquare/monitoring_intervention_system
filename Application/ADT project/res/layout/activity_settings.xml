<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >
    
		   <TextView
		       android:id="@+id/ip_server_label"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:text="IP server" />
		   
		   <EditText
		       android:id="@+id/ip_server_text"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:hint="Es:84.253.125.46 o url"
		       android:inputType="text" />
		
		   <Button
		       android:id="@+id/ip_server_button"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:gravity="center"
		       android:onClick="saveIpServer"
		       android:text="Salva" />
	</LinearLayout>
    
    
    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >
    
		    <TextView
		        android:id="@+id/port_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Porta" />
		    
		    <EditText
		        android:id="@+id/port_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="Default: 80"
		        android:inputType="number" />
		
		    <Button
		        android:id="@+id/port_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:onClick="savePort"
		        android:text="Salva" />

	</LinearLayout>
</LinearLayout>
